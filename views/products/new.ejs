<%- include("../partial/header.ejs") %>
  <%- include("../partial/navbar.ejs") %>

    <div class="container" style="margin-top: 3rem;width: 80vw;">

      <form class="needs-validation" action="/products" method="POST" class="row g-3"
        style="max-width:70%;margin: 12px auto;" novalidate>
        <div class="mb-3">
          <label for="name" class="form-label">Title</label>
          <input type="text" class="form-control" id="name" placeholder="Product Name" name="product[name]" required>
          <div class="valid-feedback">
            Looks good!
          </div>

          <div class="invalid-feedback">
            Please enter valid username.
          </div>

        </div>
        <div class="mb-3">
          <label for="img" class="form-label">Image Url</label>
          <input type="text" class="form-control" id="img" placeholder="Image URL" name="product[img]" required>
          <div class="valid-feedback">
            Looks good!
          </div>

          <div class="invalid-feedback">
            Please enter valid image url.
          </div>

        </div>
        <div class="mb-3">
          <label for="author" class="form-label">Author</label>
          <input type="text" class="form-control" id="author" placeholder="Author" name="product[author]" required>
          <div class="valid-feedback">
            Looks good!
          </div>

          <div class="invalid-feedback">
            Please enter valid price.
          </div>

        </div>
        <div class="mb-3">
          <label for="summ" class="form-label">Summary</label>
          <textarea class="form-control" id="summ" rows="2" name="product[summ]" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>

          <div class="invalid-feedback">
            Please enter a valid description.
          </div>
        </div>

        <div class="mb-3">
          <label for="desc" class="form-label">Description</label>
          <textarea class="form-control" id="desc" rows="3" name="product[desc]" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>

          <div class="invalid-feedback">
            Please enter a valid description.
          </div>
        </div>


        <div class="mb-3">
          <label for="date" class="col-2 col-form-label">Date and time</label>
          <div class="col-10">
            <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00"
              id="example-datetime-local-input" name="product[date]" required>
          </div>



          <div class="valid-feedback">
            Looks good!
          </div>

          <div class="invalid-feedback">
            Please enter valid price.
          </div>

        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>


    </div>



    <%- include("../partial/footer.ejs") %>